# Sleepless Agent - Claude Code Supervisor Runtime
# Copy this file to .env and fill in your values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Workspace directory (default: ./workspace)
SLEEPLESS_WORKSPACE=./workspace

# Docker container name running Claude Code (default: claude-cc)
SLEEPLESS_CONTAINER=claude-cc

# Execution timeout in seconds (default: 3600 = 1 hour)
SLEEPLESS_TIMEOUT=3600

# =============================================================================
# ZULIP OBSERVABILITY (Optional)
# =============================================================================
# Zulip provides a read-only event timeline for monitoring task execution.
# All fields required if ZULIP_ENABLED=true

# Enable Zulip reporting
ZULIP_ENABLED=false

# Zulip server URL
ZULIP_SITE=https://your-org.zulipchat.com

# Bot email address (from Zulip bot settings)
ZULIP_EMAIL=sleepless-bot@your-org.zulipchat.com

# Bot API key (from Zulip bot settings)
ZULIP_API_KEY=your-api-key-here

# Stream name for task events
ZULIP_STREAM=sleepless
